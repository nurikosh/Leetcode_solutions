func letterCombinations(digits string) []string {
    if len(digits) == 0{
        return []string{}    }

    letters := []string{"abc", "def", "ghi", "jkl", "mno", "pqrs", "tuv", "wxyz"}
    res := []string{""}

    for _, digit := range digits{
        newComb := []string{}
        for _, ch := range res{
            for _, letter := range letters[digit - '2']{
                newComb = append(newComb, ch+string(letter))
            }
        }
        res = newComb
    }
    return res
}
